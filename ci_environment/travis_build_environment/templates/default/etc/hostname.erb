<%
bits            = (node.kernel.machine =~ /x86_64/ ? 64 : 32)
hostname_to_set = case [node[:platform], node[:platform_version]]
                  when ["ubuntu", "11.04"] then
                    "natty#{bits}"
                  when ["ubuntu", "11.10"] then
                    "oneiric#{bits}"
                  when ["ubuntu", "12.04"] then
                    "precise#{bits}"
                  end
-%>
<%= hostname_to_set %>
